{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "target": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "paths": {
      "@/*": ["./src/*"],
      "@pravado/types": ["../../packages/types/src"],
      "@pravado/validators": ["../../packages/validators/src"],
      "@pravado/utils": ["../../packages/utils/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "../agents/**/*"],
  "references": [
    { "path": "../../packages/types" },
    { "path": "../../packages/validators" },
    { "path": "../../packages/utils" }
  ]
}
